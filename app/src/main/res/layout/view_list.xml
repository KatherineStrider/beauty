<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin_mini"
    android:paddingLeft="@dimen/activity_horizontal_margin_mini"
    android:paddingRight="@dimen/activity_horizontal_margin_mini"
    android:paddingTop="@dimen/activity_vertical_margin_mini">

    <TextView
        android:id="@+id/textType"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

</LinearLayout>